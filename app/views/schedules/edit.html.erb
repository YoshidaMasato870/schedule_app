<h3 class=new_index>予定の編集</h3>
<%= form_with model: @schedule do |f| %>
  <%= render 'shared/error', model: f.object %>
  <table class=new_table>
    <tr><th><%= f.label :title ,"タイトル" %><span class=asterisk>*</span></th></tr>
    <tr><td><%= f.text_field :title, 
    placeholder: "タイトル"  %></td></tr>

    <tr>
      <th><%= f.label :start_time ,"開始日" %><span class=asterisk>*</span></th>
      <th><%= f.label :end_time ,"終了日" %><span class=asterisk>*</span></th>
    </tr>

    <tr>
      <td><%= f.date_field :start_time %></td>
      <td><%= f.date_field :end_time %></td>
    </tr>

    <tr>
      <td><%= f.check_box :all_day %>終日の場合はチェックを入れます</td>

    </tr>

    <tr>
      <th><%= f.label :memo ,"スケジュールメモ" %></th>
    </tr>
    <tr>
      <td colspan="2"><%= f.text_area :memo ,placeholder: "メモを入力してください" ,
       size: "80x7" %></td>
    </tr>
    <tr class=action_button>
      <th colspan="2">
        <%= link_to "キャンセル" , :schedules %>
        <%= f.submit "保存" %>
      </th>
    </tr>
  </table>
<% end %>
